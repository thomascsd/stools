{
  "name": "@thomascsd/stools",
  "version": "1.2.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/thomascsd/stools"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --target node",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "deploy:cpy": "cpy ./package.json ./dist/ & cpy ./README.md ./dist/",
    "deploy": "deploy:cpy & cd dist & npm publish --access public --dry-run",
    "docs": "typedoc --out docs src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "thomascsd",
  "module": "dist/stools.esm.js",
  "size-limit": [
    {
      "path": "dist/stools.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/stools.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "cpy-cli": "^4.2.0",
    "husky": "^8.0.3",
    "size-limit": "^8.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "asyncairtable": "^2.3.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  }
}
