{
  "name": "@thomascsd/stools",
  "version": "3.0.0",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/thomascsd/stools.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "typings": "./dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "dts watch",
    "build": "tsdown --format esm --format cjs",
    "test": "dts test",
    "lint": "dts lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "deploy:cpy": "cpy ./package.json ./dist/ & cpy ./README.md ./dist/",
    "deploy": "deploy:cpy & cd ./dist & npm publish --access public --dry-run",
    "docs": "typedoc --out docs src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "thomascsd",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "cpy-cli": "^5.0.0",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "size-limit": "^11.1.6",
    "ts-jest": "^29.2.6",
    "tsdown": "^0.15.6",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "types": "./dist/index.d.cts"
}
